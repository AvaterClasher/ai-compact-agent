ANTHROPIC_API_KEY=sk-ant-
OPENAI_API_KEY=sk-openai-
DATABASE_PATH=./data/agent.db
PORT=5001

# Docker DB volume: persist SQLite in a Docker-managed volume (default: true)
# When true, `docker compose up -d` is auto-started before DB init
# When false, SQLite writes directly to DATABASE_PATH with no Docker
DOCKER_DB=true

# OpenTelemetry + Axiom (optional - for distributed tracing)
# Get your token from https://app.axiom.co/settings/tokens
AXIOM_API_TOKEN=xaat-xxxxx-xxxx-xxxx
AXIOM_DATASET=exo
AXIOM_OTLP_ENDPOINT=https://api.axiom.co/v1/traces
OTEL_SERVICE_NAME=exo

# Demo: lower compaction thresholds to trigger quickly (uncomment for demo)
# CONTEXT_WINDOW_OVERRIDE=3000
# OUTPUT_TOKEN_MAX=500
# PRUNE_MINIMUM=200
# PRUNE_PROTECT=400